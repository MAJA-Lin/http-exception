{
    "name": "majalin/http-exception",
    "type": "library",
    "description": "An exception that contains http status code",
    "keywords": [
        "exception", "http-status-code", "http-code", "httpcode", "type"
    ],
    "homepage": "https://github.com/MAJA-Lin/http-exception",
    "license": "MIT",
    "authors": [{
        "name": "Scott Lin",
        "homepage": "https://github.com/MAJA-Lin"
    }],
    "require": {
        "php": ">=7.1",
        "symfony/http-foundation": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 || ^6.0"
    },
    "autoload": {
        "psr-4": {
            "MajaLin\\HttpException\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MajaLin\\HttpException\\Tests\\":  "tests/"
        }
    }
}
